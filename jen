pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS = credentials('Github')
        GIT_USER_NAME = "nidhi-ashtikar"
        GIT_USER_EMAIL = "ashtikarnidhi19@gmail.com"
        PLAN_FILE = "terraform-plan.out"
        PLAN_OUTPUT_FILE = "terraform-plan.txt"
    }

    parameters {
        string(name: 'AWS_ACCESS_KEY_ID', defaultValue: '', description: 'Enter AWS Access Key ID')
        password(name: 'AWS_SECRET_ACCESS_KEY', defaultValue: '', description: 'Enter AWS Secret Access Key')
        string(name: 'BRANCH_NAME', defaultValue: 'terraform-plan-branch', description: 'Branch containing the Terraform plan')
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: "${params.BRANCH_NAME}", url: 'https://github.com/nidhi-ashtikar/infra-tf-creation.git'
            }
        }

         stage('Download Terraform Plan') {
            steps {
                sh "cp ${env.PLAN_FILE} ."
            }
        }

        stage('Terraform Apply') {
            steps {
                withEnv([
                    "AWS_ACCESS_KEY_ID=${params.AWS_ACCESS_KEY_ID}",
                    "AWS_SECRET_ACCESS_KEY=${params.AWS_SECRET_ACCESS_KEY}"
                ]) {
                    sh "terraform apply ${env.PLAN_FILE}"
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
